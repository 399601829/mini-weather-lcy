                android:layout_toRightOf="@id/weather_img2"
                android:singleLine="true"
                android:text="N/A"
                android:textColor="@android:color/white"
                android:textSize="15.0sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/day3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
